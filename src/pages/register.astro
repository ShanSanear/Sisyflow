---
import AuthLayout from "../layouts/AuthLayout.astro";
import { RegisterForm } from "../components/auth/RegisterForm.tsx";
import { createSupabaseServerInstance } from "../db/supabase.client.ts";

// Check if users already exist in the system using the count_profiles function
const supabase = createSupabaseServerInstance({
  cookies: Astro.cookies,
  headers: Astro.request.headers,
});

const { data: userCount, error: countError } = await supabase.rpc("count_profiles");

// If users exist or there's an error checking, redirect to login
if (countError || (userCount && userCount > 0)) {
  return Astro.redirect("/login");
}
---

<AuthLayout title="Register">
  <RegisterForm client:load />
</AuthLayout>
